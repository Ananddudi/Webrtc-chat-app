{
  "version": 2.0,
  "builds": [{ "src": "*.js", "use": "@vercel/node" }],
  "routes": [{ "src": "/api/(.*)", "dest": "server.js" }],
  "rewrites": [{ "source": "/(.*)", "destination": "/" }],
  "env": {
    "APP_URL": "https://web-node-chat.vercel.app",
    "COOKIE_SECRETS": "your_cookie_secrets_here"
  }
}
